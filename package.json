{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "clean": "rm -rf build 2> /dev/null",
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -o ./app/tailwind.css",
    "dev:remix": "remix dev",
    "dev:css": "tailwindcss -i ./app/styles/tailwind.input.css -o ./app/styles/global.css --watch",
    "dev": "npm run clean && run-p dev:*",
    "postinstall": "remix setup node",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@remix-run/react": "^1.0.6",
    "@remix-run/serve": "^1.0.6",
    "@tailwindcss/typography": "^0.5.0",
    "@types/marked": "^4.0.1",
    "classnames": "^2.3.1",
    "front-matter": "^4.0.2",
    "marked": "^4.0.7",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.0.6",
    "tiny-invariant": "^1.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.6",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/uuid": "^8.3.3",
    "tailwindcss": "^3.0.2",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
