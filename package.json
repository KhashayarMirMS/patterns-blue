{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -i ./app/styles/tailwind.input.css -o ./app/styles/global.css",
    "dev:remix": "cross-env NODE_ENV=development netlify dev",
    "dev:css": "tailwindcss -i ./app/styles/tailwind.input.css -o ./app/styles/global.css --watch",
    "dev": "run-p dev:*",
    "postinstall": "remix setup node",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@netlify/functions": "^0.10.0",
    "@remix-run/netlify": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "@remix-run/serve": "^1.1.1",
    "@tailwindcss/typography": "^0.5.0",
    "@types/marked": "^4.0.1",
    "classnames": "^2.3.1",
    "front-matter": "^4.0.2",
    "marked": "^4.0.8",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1",
    "tiny-invariant": "^1.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/uuid": "^8.3.3",
    "cross-env": "^7.0.3",
    "netlify-cli": "^8.4.2",
    "tailwindcss": "^3.0.7",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
